@model MovieStore.Models.ViewModels.ConfirmVM

<h2>Summary of your data and shopping cart</h2>

<div class="row m-3">
    <div class="col-md-6">
        <h3 class="m-3">Your Data</h3>
        <h5 class="p-2">@Model.Customer.FirstName @Model.Customer.LastName</h5>
        <h5 class="p-2">Delivery Street: @Model.Customer.DeliveryAddress</h5>
        <h5 class="p-2">Delivery Zip: @Model.Customer.DeliveryZip</h5>
        <h5 class="p-2">Delivery City: @Model.Customer.DeliveryCity</h5>
        <h5 class="p-2">Email: @Model.Customer.Email</h5>
        <h5 class="p-2">Phone: @Model.Customer.PhoneNumber</h5>
    </div>
    <div class="col-md-6">
        <h3 class="m-3">Your Order</h3>
        @foreach (var item in Model.Cart.CartMovies)
        {
            <div class="m-2">
                <span class="p-2">@item.Movie.Title</span>
                <span class="p-2">@item.Movie.Price</span>
                <span class="p-2">@item.NoOfCopies</span>
                <span class="p-2">@item.SubTotal</span>
            </div>
        }
        <h3>Total order cost: @Model.Cart.Total</h3>
    </div>
</div>
<div class="m-md-5">
    <a asp-action="CreateOrder" asp-controller="Order" class="btn btn-success btn-block btn-lg me-3">Place Order</a>
    <a asp-action="Index" asp-controller="Movie" class="btn btn-primary btn-block btn-lg">Continue Shopping</a>
</div>

