@model MovieStore.Models.ViewModels.CartVM

<section class="h-100" style="background-color: #eee;">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
                </div>

                @foreach (var item in Model.CartMovies)
                {
                    <div class="card rounded-3 mb-4">
                        <div class="card-body p-4">
                            <div class="row d-flex justify-content-between align-items-center">
                                <div class="col-md-2 col-lg-2 col-xl-2">
                                    <img src="~/images/@item.Movie.ImgURL"
                                         class="img-fluid rounded-3" alt="@item.Movie.Title">
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-3">
                                    <p class="lead fw-normal mb-2">@item.Movie.Title</p>
                                    <p><span class="text-muted">Price: </span>@item.Movie.Price </p>
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                    <button class="btn btn-link px-2"
                                            onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                        <i class="fa fa-minus"></i>
                                    </button>

                                    <input id="form1" min="0" name="quantity" value="@item.NoOfCopies" type="number"
                                           class="form-control form-control-sm" />

                                    <button class="btn btn-link px-2"
                                            onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                    <h5 class="mb-0">SEK @item.SubTotal</h5>
                                </div>
                                <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                    <a href="#!" class="text-danger"><i class="fa fa-trash fa-lg"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }




                <div class="card mb-4">
                    <div class="card-body p-4 d-flex flex-row">
                        <div class="form-outline flex-fill">
                        </div><h2>Total: @Model.Total</h2>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <a asp-action="CheckOut" asp-controller="Customer" class="btn btn-warning btn-block btn-lg">Proceed to Checkout</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
